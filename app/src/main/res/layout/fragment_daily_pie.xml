<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.uli2.userprofilemgmt.DailyPieFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Utilization"
            android:textSize="24sp"/>


        <Space
            android:id="@+id/space"
            android:layout_width="395dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie1chart"
            android:name="layout.Pie2Fragment"
            android:layout_width="match_parent"
            android:layout_height="378dp"
            android:layout_below="@+id/space"/>

        <Space
            android:id="@+id/space1"
            android:layout_width="395dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/piechart"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line1chart"
            android:name="layout.Pie2Fragment"
            android:layout_width="match_parent"
            android:layout_height="378dp"
            android:layout_below="@+id/space"/>

        <Button
            android:id="@+id/appbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All App"/>


    </LinearLayout>

</ScrollView>
